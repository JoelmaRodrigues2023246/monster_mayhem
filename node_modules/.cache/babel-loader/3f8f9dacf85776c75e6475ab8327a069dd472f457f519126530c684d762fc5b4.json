F:\\CCT\\2 SEMESTER\\Concurrent_Systems\\CA2\\project-framework\\monster_mayhem\\src\\views\\Game.vue"],"sourcesContent":["<!-- src/views/Game.vue -->\r\n<!-- This is the page where the game logic will be implemented. -->\r\n\r\n<template>\r\n  <div class=\"game\">\r\n    <h1>Game</h1>\r\n    <p>Game ID: {{ gameId }}</p>\r\n    <div v-if=\"gameData\">\r\n      <p>Current Turn: {{ gameData.turn }}</p>\r\n      <GameBoard :state=\"gameData.state\" @move=\"makeMove\" />\r\n      <GameControls @addMonster=\"addMonster\" @endTurn=\"endTurn\" />\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { ref, onMounted } from 'vue';\r\nimport { useRoute } from 'vue-router';\r\nimport { db } from '../services/firebaseConfig';\r\nimport { doc, getDoc, updateDoc, onSnapshot } from 'firebase/firestore';\r\nimport GameBoard from '../components/GameBoard.vue';\r\nimport GameControls from '../components/GameControls.vue';\r\n\r\nexport default {\r\n  name: 'Game',\r\n  components: {\r\n    GameBoard,\r\n    GameControls,\r\n  },\r\n  setup() {\r\n    const route = useRoute();\r\n    const gameId = ref(route.params.id);\r\n    const gameData = ref(null);\r\n\r\n    const loadGame = async () => {\r\n      const gameRef = doc(db, 'games', gameId.value);\r\n      const gameSnap = await getDoc(gameRef);\r\n      if (gameSnap.exists()) {\r\n        gameData.value = gameSnap.data();\r\n      } else {\r\n        console.error('No such game!');\r\n      }\r\n    };\r\n\r\n    const addMonster = async () => {\r\n      const newState = { ...gameData.value.state };\r\n      newState.monsters.push({ type: 'vampire', position: [0, 0] });\r\n      await updateDoc(doc(db, 'games', gameId.value), { state: newState });\r\n    };\r\n\r\n    const makeMove = async (move) => {\r\n      const newState = { ...gameData.value.state, ...move };\r\n      await updateDoc(doc(db, 'games', gameId.value), { state: newState });\r\n    };\r\n\r\n    const endTurn = async () => {\r\n      const nextTurn = getNextTurn(gameData.value.players, gameData.value.turn);\r\n      await updateDoc(doc(db, 'games', gameId.value), { turn: nextTurn });\r\n    };\r\n\r\n    const getNextTurn = (players, currentTurn) => {\r\n      const currentIndex = players.indexOf(currentTurn);\r\n      return players[(currentIndex + 1) % players.length];\r\n    };\r\n\r\n    onMounted(() => {\r\n      loadGame();\r\n      const gameRef = doc(db, 'games', gameId.value);\r\n      onSnapshot(gameRef, (doc) => {\r\n        if (doc.exists()) {\r\n          gameData.value = doc.data();\r\n        }\r\n      });\r\n    });\r\n\r\n    return {\r\n      gameId,\r\n      gameData,\r\n      addMonster,\r\n      makeMove,\r\n      endTurn,\r\n    };\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.game {\r\n  text-align: center;\r\n  margin-top: 50px;\r\n}\r\n.game h1 {\r\n  font-size: 2.5em;\r\n  margin-bottom: 20px;\r\n}\r\n.game p {\r\n  font-size: 1.2em;\r\n  margin-bottom: 20px;\r\n}\r\n</style>\r\n\r\n"],"mappings":";;;;;EAIO,SAAM;AAAM;;sBACfA,mBAAA,CAAa,YAAT,MAAI;AAAA;;EALZC,GAAA;AAAA;;;;uBAIEC,mBAAA,CAQM,OARNC,UAQM,GAPJC,UAAa,EACbJ,mBAAA,CAA4B,WAAzB,WAAS,GAAAK,gBAAA,CAAGC,MAAA,CAAAC,MAAM,kBACVD,MAAA,CAAAE,QAAQ,I,cAAnBN,mBAAA,CAIM,OAXVO,UAAA,GAQMT,mBAAA,CAAwC,WAArC,gBAAc,GAAAK,gBAAA,CAAGC,MAAA,CAAAE,QAAQ,CAACE,IAAI,kBACjCC,YAAA,CAAsDC,oBAAA;IAA1CC,KAAK,EAAEP,MAAA,CAAAE,QAAQ,CAACK,KAAK;IAAGC,MAAI,EAAER,MAAA,CAAAS;gDAC1CJ,YAAA,CAA4DK,uBAAA;IAA7CC,YAAU,EAAEX,MAAA,CAAAY,UAAU;IAAGC,SAAO,EAAEb,MAAA,CAAAc;8DAVvDC,mBAAA,e","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}